imports
{
import CCO.SourcePos
import CCO.Types
}

-------------------------------------------------------------------------------
-- Syntax
-------------------------------------------------------------------------------

data SFTy
  | SFTyVar   a :: {TyVar}
  | SFArr     ty1 :: SFTy  ty2 :: SFTy
  | SFForall  a :: {TyVar}  ty1 :: SFTy

data SFTm
  | SFVar    x :: {Var}
  | SFLam    x :: {Var}  ty :: SFTy  t1 :: SFTm
  | SFApp    t1 :: SFTm  t2 :: SFTm
  | SFTyLam  a :: {TyVar}  t1 :: SFTm
  | SFTyApp  t1 :: SFTm  ty :: SFTy
